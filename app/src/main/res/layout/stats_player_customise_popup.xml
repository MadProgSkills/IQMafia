<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_margin="@dimen/margin_half"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stats_customise_slot_text"
            android:text=""
            android:layout_weight="0.7"
            style="@style/recycler_style" />

        <EditText
            android:id="@+id/stats_customise_name_editt"
            android:text=""
            android:maxLines="1"
            android:layout_weight="3.6"
            style="@style/recycler_style" />

        <TextView
            android:id="@+id/stats_customise_card_text"
            android:text=""
            android:layout_weight="0.7"
            style="@style/recycler_style" />

        <TextView
            android:id="@+id/current_game_win_text"
            android:text=""
            android:layout_weight="1"
            style="@style/recycler_style" />

        <EditText
            android:id="@+id/stats_customise_rating_editt"
            android:text=""
            android:layout_weight="1"
            style="@style/recycler_style" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>